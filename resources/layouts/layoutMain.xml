<layout id="MainLayout">
    <label x="center" y="60"  justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_NUMBER_THAI_HOT" color="Gfx.COLOR_WHITE" id="labelElapsed" />
    <label x="center" y="140" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_SMALL"  color="Gfx.COLOR_WHITE" text="passed since last" />
    <label x="center" y="170" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_MEDIUM" color="Gfx.COLOR_WHITE" id="labelLogType" />
    <drawable id="ButtonBorders" />
    <button x="center" y="top" width="240" height="60" behavior="onAddFeed">
    	<state id="stateDefault" bitmap="@Drawables.iconAddLog" />
    </button>
    <bitmap id="iconArrowDown" x="center" y="223" filename="../drawables/arrow-down.png" />
    <!-- make bottom 2/3 clickable -->
    <button x="center" y="80" width="240" height="160" background="Gfx.COLOR_TRANSPARENT" behavior="onNextPage" />
</layout>